<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LunchRoulette.Services.RestaurantDetailPage">
  <StackLayout Padding="20">    
    <Label Text="{Binding Restaurant.name}"></Label>
    <Label Text="{Binding Restaurant.vicinity}"></Label>
    <Label Text="{Binding Restaurant.price_level,StringFormat='Price Level: {0}'}"></Label>
    <Button Text="Eat Here" Clicked="Button_OnClicked"></Button>
  </StackLayout>
</ContentPage>