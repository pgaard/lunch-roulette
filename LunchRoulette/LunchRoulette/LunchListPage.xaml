<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LunchRoulette.LunchListPage">
  <StackLayout>
    <Label>Test</Label>
    <Label Text="{Binding Build, StringFormat='Build {0}'}"></Label>
    <Entry></Entry>    
    <Button Text="Add" Clicked="Add_OnClicked"></Button>
    <ListView x:Name="chowList">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Orientation="Horizontal">              
              <Label Text="{Binding RestaurantName}"></Label>
              <Label Text="{Binding Date}"></Label>            
            </StackLayout> 
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>